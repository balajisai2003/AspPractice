@model AspPractice.Models.Domain.Dept
@{
}
<h1>Edit Department</h1>
<form method="post">
    <div class="form-group">
        
        <label class="form-label">Id</label>
        <input type="text" id="Id" class="form-control" asp-for="Id" readonly />

        <label class="mb-3">Dept Name</label>
        
        <input type= "text" class="form-control" asp-for="Name" />
    </div>
    
    <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Dept" asp-action="Edit">Update</button>
    <button type="submit" class="btn btn-danger" asp-area="" asp-controller="Dept" asp-action="Delete">Delete</button>
</form>






